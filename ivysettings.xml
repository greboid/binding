<ivysettings>
    <caches artifactPattern="[organisation]/[module]/[revision]/[artifact].[ext]" />
    <settings defaultResolver="default" overwriteMode="always" />
    <resolvers>
        <url name="default" m2compatible="true">
            <ivy
                pattern="http://repo1.maven.org/maven2/[organization]/[module]/[revision]/[artifact]-[revision].[ext]" />
            <artifact
                pattern="http://repo1.maven.org/maven2/[organization]/[module]/[revision]/[artifact]-[revision].[ext]" />
        </url>
        <ibiblio name="dmdirc-releases" root="http://nexus.dmdirc.com/nexus/content/groups/public/" m2compatible="true"/>
    </resolvers>
    <modules>
        <module organisation="com.dmdirc" name="*" resolver="dmdirc-releases"/>
    </modules>
</ivysettings>
